<Window x:Class="BeautySalon.EditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalon"
        mc:Ignorable="d"
        Title="Добавление/Редактирование услуги" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#ff4a6d">
            <Button x:Name="BtnBack" Content="Назад" Background="#ff4a6d" Foreground="Aqua" Margin="10" HorizontalAlignment="Left" Click="BtnBack_Click"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center">
                <Image Source="/Resources/beauty_logo.png"/>
                <TextBlock Text="Добавление/Редактирование услуги" Foreground="White" FontSize="18" FontWeight="Bold" 
VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="0" Text="Название услуги:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="TitleTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Стоимость:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="CostTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Продолжительность (минуты):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" x:Name="DurationTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Скидка (0.0 - 1.0):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="7" x:Name="DiscountTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="8" Text="Описание:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="9" x:Name="DescriptionTextBox" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="10" Text="Путь к изображению:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="11" x:Name="ImagePathTextBox" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
