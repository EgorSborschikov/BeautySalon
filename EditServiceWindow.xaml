<Window x:Class="BeautySalon.EditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalon"
        mc:Ignorable="d"
        Title="Добавление/Редактирование услуги" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#ff4a6d">
            <Button x:Name="BtnBack" Content="Назад" Background="#ff4a6d" Foreground="Aqua" Margin="10" HorizontalAlignment="Left" Click="BtnBack_Click"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center">
                <Image Source="/Resources/beauty_logo.png"/>
                <TextBlock Text="Добавление/Редактирование услуги" Foreground="White" FontSize="18" FontWeight="Bold" 
VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Поля формы в два столбца -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TitleTextBox" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Стоимость:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="CostTextBox" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Продолжительность (мин):" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="DurationTextBox" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Скидка (0.0-1.0):" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="DiscountTextBox" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Путь к изображению:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="ImagePathTextBox" Margin="0,0,0,20"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Описание:" Margin="0,0,10,10" VerticalAlignment="Top"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="DescriptionTextBox" AcceptsReturn="True" TextWrapping="Wrap" 
                         Height="80" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки внизу -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Padding="10,5" 
                        Click="SaveButton_Click" Background="#4CAF50" Foreground="White"/>
                <Button Content="Отмена" Width="100" Margin="5" Padding="10,5" 
                        Click="CancelButton_Click" Background="#f44336" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
