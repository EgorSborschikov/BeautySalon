<Window x:Class="BeautySalon.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalon"
        mc:Ignorable="d"
        Icon="/Resources/beauty_logo.ico"
        FontFamily="Tahoma"
        Title="Админ-панель" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#ff4a6d">
            <Button x:Name="BtnBack" Content="Назад" Background="#ff4a6d" Foreground="Aqua" Margin="10" HorizontalAlignment="Left" Click="BtnBack_Click"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center">
                <Image Source="/Resources/beauty_logo.png"/>
                <TextBlock Text="Админ-панель" Foreground="White" FontSize="18" FontWeight="Bold" 
   VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5" HorizontalAlignment="Center">
            <Button x:Name="BtnServices" Content="Редактор услуг" Margin="5" Padding="15,5" 
                    Click="BtnServices_Click" Background="#ff4a6d" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="BtnImages" Content="Управление изображениями" Margin="5" Padding="15,5" 
                    Click="BtnImages_Click" Background="#2196F3" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="BtnClientRecords" Content="Запись клиентов" Margin="5" Padding="15,5" 
                    Click="BtnClientRecords_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="BtnManageRecords" Content="Управление записями" Margin="5" Padding="15,5" 
                    Click="BtnManageRecords_Click" Background="#FF9800" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
